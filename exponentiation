basis = float(input('Input the basis:  '))
index = float(input('Input the idex: '))

mutipliesAmount = 0
result = basis
while mutipliesAmount < index - 1:
    result = result * basis
    mutipliesAmount += 1
if index == 0:
   result = 1
print(result)

